# 0. Setup sane shell environment
\unset IFS
\unalias -a
unset -f command
path="${PATH}"
export PATH="$(command -p getconf PATH):${PATH}"
unset LANG CDPATH
export LC_ALL=POSIX
set -e

# 1. Determine installation directory of XMvn
case "${0}" in
    *[\\/]*)
        home=$(dirname "${0}")/..
        ;;
    *)
        IFS=:
        for dir in $path; do
            if [ -z "${dir}" ]; then
                dir=.
            fi
            if [ -r "${dir}/${0}" ]; then
                home="${dir}"/..
                unset IFS
                break
            fi
        done

        echo "$0: Unable to find XMvn installation directory." >&2
        exit 1
        ;;
esac

# 2. Determine which tool was ran
tool=$(basename "${0}")
case "${tool}" in
    *bisect*)
        tool=bisect
        class=org.fedoraproject.maven.tools.bisect.BisectCli
        ;;
    *install*)
        tool=installer
        class=org.fedoraproject.maven.tools.installer.InstallerCli
        ;;
    *resolve*)
        tool=resolver
        class=org.fedoraproject.maven.tools.resolver.ResolverCli
        ;;
    *subst*)
        tool=subst
        class=org.fedoraproject.maven.tools.subst.SubstCli
        ;;
    *)
        class="${tool}"
esac

# 3. Set classpath
unset cp
for jar in "${home}/lib/${tool}"/*; do
    cp="${cp}${cp+:}${jar}"
done

# 4. Execute the tool
exec java -classpath "${cp}" "${class}" "${@}"
