<model xmlns="http://modello.codehaus.org/MODELLO/1.4.0"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://modello.codehaus.org/MODELLO/1.4.0
                           http://modello.codehaus.org/xsd/modello-1.4.0.xsd"
       xml.namespace="http://fedorahosted.org/xmvn/CONFIG/${version}">
  <id>config</id>
  <name>Configuration</name>
  <description>
    <![CDATA[
<p>This is a reference for the configuration for XMvn.</p>
    ]]>
  </description>
  <defaults>
    <default>
      <key>package</key>
      <value>org.fedoraproject.maven.config</value>
    </default>
  </defaults>
  <classes>

    <class java.clone="deep">
      <name>BuildSettings</name>
      <version>0.4.0+</version>
      <description>Basic build settings.</description>
      <fields>
        <field>
          <name>debug</name>
          <version>0.4.0+</version>
          <description>
            Whether detailed debugging information about the build
            process should be logged.
          </description>
          <type>Boolean</type>
        </field>
        <field>
          <name>skipTests</name>
          <version>0.4.0+</version>
          <description>
            Whether compilation and execution of unit and integration tests should be skipped.
          </description>
          <type>Boolean</type>
        </field>
        <field>
          <name>compilerSource</name>
          <version>0.4.0+</version>
          <description>
            Compatibility version of Java sources in the reactor. If
            not specified then it defaults to 1.5 or whatever is
            specified in configuration of Maven Compiler Plugin.
          </description>
          <type>String</type>
        </field>
      </fields>
    </class>

    <class xml.tagName="artifact" java.clone="deep">
      <name>Artifact</name>
      <version>0.4.0+</version>
      <description>Identifier of Maven artifact.</description>
      <fields>
        <field>
          <name>groupId</name>
          <version>0.4.0+</version>
          <description>Group ID of the artifact.</description>
          <type>String</type>
          <defaultValue></defaultValue>
        </field>
        <field>
          <name>artifactId</name>
          <version>0.4.0+</version>
          <description>Artifact ID of the artifact.</description>
          <type>String</type>
          <defaultValue></defaultValue>
        </field>
        <field>
          <name>version</name>
          <version>0.4.0+</version>
          <description>Version of the artifact.</description>
          <type>String</type>
          <defaultValue></defaultValue>
        </field>
        <field>
          <name>classifier</name>
          <version>1.0.0+</version>
          <description>Classifier of the artifact.</description>
          <type>String</type>
          <defaultValue></defaultValue>
        </field>
        <field>
          <name>stereotype</name>
          <version>1.0.0+</version>
          <description>Maven stereotype of the artifact.</description>
          <type>String</type>
          <defaultValue></defaultValue>
        </field>
        <field>
          <name>extension</name>
          <version>1.0.0+</version>
          <description>Extension of the artifact.</description>
          <type>String</type>
          <defaultValue></defaultValue>
        </field>
      </fields>
    </class>

    <class xml.tagName="stereotype" java.clone="deep">
      <name>Stereotype</name>
      <version>1.0.0+</version>
      <description>Stereotype of Maven artifact.</description>
      <fields>
        <field>
          <name>type</name>
          <version>1.0.0+</version>
          <description>Type ID of the stereotype.</description>
          <type>String</type>
        </field>
        <field>
          <name>extension</name>
          <version>1.0.0+</version>
          <description>Extension of the artifact.</description>
          <type>String</type>
        </field>
        <field>
          <name>classifier</name>
          <version>1.0.0+</version>
          <description>Classifier of the artifact.</description>
          <type>String</type>
        </field>
      </fields>
    </class>

    <class xml.tagName="repository" java.clone="deep">
      <name>Repository</name>
      <version>1.0.0+</version>
      <description>Artifact repository.</description>
      <fields>
        <field>
          <name>id</name>
          <version>1.0.0+</version>
          <description>Unique string identifying this repository.</description>
          <type>String</type>
        </field>
        <field>
          <name>type</name>
          <version>1.0.0+</version>
          <description>
            Role hint of Plexus component implementing the repository.
          </description>
          <type>String</type>
        </field>
        <field>
          <name>stereotypes</name>
          <version>1.0.0+</version>
          <description>
            List of artifact types that can be stored in this
            repository.  Empty list means that this repository can
            store any artifact type.
          </description>
          <association xml.tagName="stereotype">
            <type>Stereotype</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
        <field>
          <name>properties</name>
          <version>1.0.0+</version>
          <description>
            Properties associated with this repository.  Properties
            can be freely used by the implementation, so their exact
            meaning depends on repository type.  See documentation for
            repository types to see list of supported properties.
          </description>
          <type>Properties</type>
          <association>
            <type>String</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
        <field>
          <name>configuration</name>
          <version>1.0.0+</version>
          <description>
            Arbitrary XML used to configure structure of the
            repository.  Configuration can be freely used by the
            implementation, so their exact meaning depends on
            repository type.  See documentation for repository types
            to see the format of supported configuration (if any).
          </description>
          <type>DOM</type>
        </field>
      </fields>
    </class>

    <class xml.tagName="rule" java.clone="deep">
      <name>PackagingRule</name>
      <version>0.4.0+</version>
      <description>Identification of Maven Artifact.</description>
      <fields>
        <field>
          <name>artifactGlob</name>
          <version>0.4.0+</version>
          <required>true</required>
          <description>Pattern specifying one or more Maven artifacts.</description>
          <association>
            <type>Artifact</type>
          </association>
        </field>
        <field>
          <name>targetPackage</name>
          <version>0.4.0+</version>
          <description>Name of binary package into which artifacts are assigned.</description>
          <type>String</type>
        </field>
        <field>
          <name>targetRepository</name>
          <version>1.0.0+</version>
          <description>
            ID of repository into which artifacts are installed.
          </description>
          <type>String</type>
        </field>
        <field>
          <name>files</name>
          <version>0.4.0+</version>
          <description>Files holding the artifact.</description>
          <association xml.tagName="file">
            <type>String</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
        <field>
          <name>versions</name>
          <version>1.0.0+</version>
          <description>Compatibility versions of the artifact.</description>
          <association xml.tagName="version">
            <type>String</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
        <field>
          <name>aliases</name>
          <version>0.4.0+</version>
          <description>Alternative identifiers of artifacts.</description>
          <!-- Modello would generate methods addAliase() and removeAliase()
               instead of addAlias() and removeALias(). To workaround this we
               skip generating of adders and generate them manually. -->
          <association xml.tagName="alias" java.adder="false">
            <type>Artifact</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
        <field>
          <name>optional</name>
          <version>0.5.0+</version>
          <description>
            Whether this rule is optional.  Non-optional rules cause
            build failure if they are not matched.
          </description>
          <type>Boolean</type>
          <defaultValue>false</defaultValue>
        </field>
        <field xml.transient="true">
          <name>matched</name>
          <version>0.5.0+</version>
          <description>
            Whether any reactor artifact matches artifact glob pattern
            for this rule.  Non-optional rules cause build failure if
            they are not matched.
          </description>
          <type>Boolean</type>
          <defaultValue>false</defaultValue>
        </field>
      </fields>
      <codeSegments>
        <codeSegment>
          <version>0.4.0+</version>
          <code>
            <![CDATA[
    /**
     * Add an alias.
     * @param artifact alias to be added
     */
    public void addAlias( Artifact artifact )
    {
        getAliases().add( artifact );
    }

    /**
     * Remove an alias.
     * @param artifact alias to be removed
     */
    public void removeAlias( Artifact artifact )
    {
        getAliases().remove( artifact );
    }
            ]]>
          </code>
        </codeSegment>
      </codeSegments>
    </class>

    <class java.clone="deep">
      <name>InstallerSettings</name>
      <version>0.4.0+</version>
      <description>XMvn settings related to installation of artifacts.</description>
      <fields>
        <field>
          <name>debug</name>
          <version>0.4.0+</version>
          <description>
            Whether additional debugging information about artifact
            installation should be printed.
          </description>
          <type>Boolean</type>
        </field>
        <field>
          <name>packageName</name>
          <version>0.4.0+</version>
          <description>
            Name of the source package as part of which reactor will
            be installed.
          </description>
          <type>String</type>
        </field>
        <field>
          <name>skipProvides</name>
          <version>0.4.0+</version>
          <description>
            Whether generation of package provides should be skipped.
          </description>
          <type>Boolean</type>
        </field>
        <field>
          <name>skipRequires</name>
          <version>0.4.0+</version>
          <description>
            Whether generation of package requires should be skipped.
          </description>
          <type>Boolean</type>
        </field>
        <field>
          <name>enableRawPoms</name>
          <version>0.4.0+</version>
          <description>
            Whether raw POM files should ever be installed.
          </description>
          <type>Boolean</type>
        </field>
        <field>
          <name>enableEffectivePoms</name>
          <version>0.4.0+</version>
          <description>
            Whether effective POM files should ever be installed.
          </description>
          <type>Boolean</type>
        </field>
        <field>
          <name>pomRawModel</name>
          <version>0.4.0+</version>
          <description>
            Whether installation of raw POMs should be performed for
            POM artifacts.
          </description>
          <type>Boolean</type>
        </field>
        <field>
          <name>pomEffectiveModel</name>
          <version>0.4.0+</version>
          <description>
            Whether installation of effective POMs should be performed
            for POM artifacts.
          </description>
          <type>Boolean</type>
        </field>
        <field>
          <name>jarRawModel</name>
          <version>0.4.0+</version>
          <description>
            Whether installation of raw POMs should be performed for
            JAR artifacts.
          </description>
          <type>Boolean</type>
        </field>
        <field>
          <name>jarEffectiveModel</name>
          <version>0.4.0+</version>
          <description>
            Whether installation of effective POMs should be performed
            for JAR artifacts.
          </description>
          <type>Boolean</type>
        </field>
        <field>
          <name>jarDir</name>
          <version>0.4.0+</version>
          <required>true</required>
          <description>
            Directory into which platform-independant JAR files are be
            installed.
          </description>
          <type>String</type>
        </field>
        <field>
          <name>jniDir</name>
          <version>0.4.0+</version>
          <required>true</required>
          <description>
            Directory into which platform-dependant JAR files are be
            installed.
          </description>
          <type>String</type>
        </field>
        <field>
          <name>pomDir</name>
          <version>0.4.0+</version>
          <required>true</required>
          <description>
            Directory into which raw POM files are be installed.
          </description>
          <type>String</type>
        </field>
        <field>
          <name>effectivePomDir</name>
          <version>0.4.0+</version>
          <required>true</required>
          <description>
            Directory into which effective POM files are be installed.
          </description>
          <type>String</type>
        </field>
        <field>
          <name>metadataDir</name>
          <version>0.4.0+</version>
          <required>true</required>
          <description>
            Directory into which XMvn metadata files are be installed.
          </description>
          <type>String</type>
        </field>
        <field>
          <name>installRoot</name>
          <version>0.4.0+</version>
          <required>true</required>
          <description>
            Directory into which artfiacts are installed.
          </description>
          <type>String</type>
        </field>
      </fields>
    </class>

    <class java.clone="deep">
      <name>ResolverSettings</name>
      <version>0.4.0+</version>
      <description>XMvn settings related to resolution of artifacts.</description>
      <fields>
        <field>
          <name>debug</name>
          <version>0.4.0+</version>
          <description>
            Whether detailed debugging information about artifact
            resolution process should be logged.
          </description>
          <type>Boolean</type>
        </field>
        <field>
          <name>localRepositories</name>
          <version>0.4.0+</version>
          <description>
            List of local repositories where XMvn will look for artifacts.
          </description>
          <association xml.tagName="repository">
            <type>String</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
        <field>
          <name>jarRepositories</name>
          <version>0.4.0+</version>
          <description>
            List of system repositories where XMvn will look for JAR files.
          </description>
          <association xml.tagName="repository">
            <type>String</type>
            <multiplicity>*</multiplicity>
