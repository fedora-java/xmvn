        </field>
        <field>
          <name>pomRepositories</name>
          <version>0.4.0+</version>
          <description>
            List of system repositories where XMvn will look for POM
            files.
          </description>
          <association xml.tagName="repository">
            <type>String</type>
            <multiplicity>*</multiplicity>
          </association>
